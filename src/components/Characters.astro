---
const characters = [
  {
    name: "Eleven",
    role: "La niña con poderes telequinéticos",
    img: "/assets/images/characters/eleven.jpg"
  },
  {
    name: "Mike Wheeler",
    role: "Líder del grupo de amigos",
    img: "/assets/images/characters/mike.png"
  },
  {
    name: "Dustin Henderson",
    role: "El cerebro del grupo",
    img: "/assets/images/characters/dustin.jpg"
  },
  {
    name: "Lucas Sinclair",
    role: "El más cauteloso del grupo",
    img: "/assets/images/characters/lucas.jpg"
  },
  {
    name: "Will Byers",
    role: "El niño que desapareció",
    img: "/assets/images/characters/will.jpg"
  },
  {
    name: "Max Mayfield",
    role: "La skater valiente",
    img: "/assets/images/characters/max.jpg"
  },
];
---

<section id="characters" class="w-full px-6 py-20 bg-black text-white">
  <div class="max-w-6xl mx-auto text-center">
    <h2 class="text-4xl font-bold tracking-wide mb-10 text-red-500">
      Personajes Principales
    </h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">
      {characters.map((char) => (
        <div class="bg-neutral-900 rounded-xl overflow-hidden shadow-lg hover:scale-105 transition-transform duration-300">
          <img src={char.img} alt={char.name} class="w-full h-64 object-cover" />

          <div class="p-5">
            <h3 class="text-2xl font-semibold">{char.name}</h3>
            <p class="text-sm mt-2 text-neutral-300">{char.role}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
